		<!-- Footer -->
		<footer class="bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 text-white py-16 relative overflow-hidden">
			<!-- Background pattern -->
			<div class="absolute inset-0 opacity-5">
				<div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, rgba(255,255,255,0.3) 1px, transparent 0); background-size: 24px 24px;"></div>
			</div>
			
			<div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center">
					<div class="text-3xl font-black mb-8 bg-gradient-to-r from-white via-gray-100 to-white bg-clip-text text-transparent">
						Fini les vacances
					</div>

					<div class="mb-8">
						<div class="inline-flex items-center bg-white/5 backdrop-blur-sm rounded-2xl px-6 py-4 border border-white/10">
							<svg class="w-5 h-5 mr-3 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
							</svg>
							<a href="mailto:contact@finilesvacances.be" class="text-gray-300 hover:text-white transition-colors font-medium">
								contact@finilesvacances.be
							</a>
						</div>
					</div>

					<div class="border-t border-white/10 pt-8">
						<p class="text-sm text-gray-400 font-medium">
							Projet citoyen sans affiliation politique
						</p>
					</div>
				</div>
			</div>
		</footer>

		<script>
			// Gestion des interactions
			document.addEventListener('DOMContentLoaded', function() {
				// Smooth scroll pour tous les liens
				document.querySelectorAll('a[href^="#"]').forEach(anchor => {
					anchor.addEventListener('click', function (e) {
						e.preventDefault();
						const target = document.querySelector(this.getAttribute('href'));
						if (target) {
							target.scrollIntoView({
								behavior: 'smooth',
								block: 'start'
							});
						}
					});
				});

				// FAQ Accordéon
				document.querySelectorAll('.faq-button').forEach(button => {
					button.addEventListener('click', function() {
						const targetId = this.getAttribute('data-target');
						const content = document.getElementById(targetId);
						const icon = this.querySelector('.faq-icon');
						
						// Fermer tous les autres accordéons
						document.querySelectorAll('.faq-content').forEach(otherContent => {
							if (otherContent.id !== targetId && !otherContent.classList.contains('hidden')) {
								otherContent.classList.add('hidden');
								const otherIcon = otherContent.previousElementSibling.querySelector('.faq-icon');
								otherIcon.textContent = '+';
								otherIcon.style.transform = 'rotate(0deg)';
							}
						});
						
						// Toggle l'accordéon actuel
						if (content.classList.contains('hidden')) {
							content.classList.remove('hidden');
							icon.textContent = '−';
							icon.style.transform = 'rotate(180deg)';
						} else {
							content.classList.add('hidden');
							icon.textContent = '+';
							icon.style.transform = 'rotate(0deg)';
						}
					});
				});

				// Gestion des boutons radio
				const radioButtons = document.querySelectorAll('input[name="tone"]');
				const radioLabels = document.querySelectorAll('label:has(input[name="tone"])');
				
				radioButtons.forEach((radio, index) => {
					radio.addEventListener('change', function() {
						// Reset all labels
						radioLabels.forEach(label => {
							const circle = label.querySelector('div');
							circle.classList.remove('bg-slate-900', 'border-slate-900');
							circle.classList.add('border-gray-300');
						});
						
						// Highlight selected
						if (this.checked) {
							const label = this.closest('label');
							const circle = label.querySelector('div');
							circle.classList.remove('border-gray-300');
							circle.classList.add('bg-slate-900', 'border-slate-900');
						}
						
						updateMessagePreview();
					});
				});

				// Update message preview
				function updateMessagePreview() {
					const politician = document.getElementById('politician-select').value;
					const tone = document.querySelector('input[name="tone"]:checked')?.value;
					const preview = document.getElementById('message-preview');
					
					let message = "Sélectionne un responsable et un ton pour voir l'aperçu.";
					
					if (politician && tone) {
						const messages = {
							'neutral': "Bonjour, cela fait plus d'un an que les élections ont eu lieu. Quand un gouvernement sera-t-il formé ?",
							'firm': "Un an sans gouvernement, ça suffit. Il est temps d'assumer vos responsabilités.",
							'ironic': "Un an de vacances prolongées, c'est bien... mais quand est-ce qu'on travaille ?"
						};
						message = messages[tone] || message;
					}
					
					preview.textContent = `"${message}"`;
				}

				// Politician select change
				document.getElementById('politician-select').addEventListener('change', updateMessagePreview);

				// Email sending
				document.getElementById('send-email').addEventListener('click', function() {
					const politician = document.getElementById('politician-select').value;
					const tone = document.querySelector('input[name="tone"]:checked')?.value;
					
					if (!politician || !tone) {
						alert('Merci de sélectionner un responsable et un ton !');
						return;
					}
					
					// Simulate email creation
					const emails = {
						'rudi-vervoort': 'rudi.vervoort@gov.brussels',
						'elke-van-den-brandt': 'elke.vandenbrandt@gov.brussels', 
						'david-leisterh': 'david.leisterh@gov.brussels',
						'matteo-segers': 'matteo.segers@gov.brussels'
					};
					
					const messages = {
						'neutral': "Bonjour,\n\nCela fait plus d'un an que les élections régionales ont eu lieu à Bruxelles. La population attend la formation d'un gouvernement.\n\nQuand cette situation sera-t-elle résolue ?\n\nCordialement",
						'firm': "Bonjour,\n\nUn an sans gouvernement à Bruxelles, ça suffit.\n\nIl est temps d'assumer vos responsabilités et de former un gouvernement qui répond aux attentes des citoyens.\n\nCordialement",
						'ironic': "Bonjour,\n\nUn an de vacances prolongées, c'est formidable pour le repos...\n\nMais quand comptez-vous reprendre le travail pour lequel vous avez été élu(e) ?\n\nCordialement"
					};
					
					const subject = "Fini les vacances - Formation du gouvernement bruxellois";
					const body = messages[tone];
					const email = emails[politician];
					
					const mailtoLink = `mailto:${email}?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
					window.location.href = mailtoLink;
					
					// Show success message
					setTimeout(() => {
						alert('Merci ! N\'oublie pas de joindre la carte postale à ton email.');
					}, 100);
				});

				// Alternative card download (étape 3)
				document.getElementById('download-card-alt').addEventListener('click', function() {
					alert('La carte sera bientôt disponible au téléchargement !');
				});

				// Instagram image download
				document.getElementById('download-instagram-image').addEventListener('click', function() {
					alert('L\'image Instagram sera bientôt disponible au téléchargement !');
				});

				// Copy caption functionality
				document.getElementById('copy-caption').addEventListener('click', function() {
					const caption = document.getElementById('instagram-caption').textContent.trim();
					navigator.clipboard.writeText(caption).then(function() {
						const button = document.getElementById('copy-caption');
						const originalText = button.innerHTML;
						button.innerHTML = '✅ Copié !';
						button.classList.add('bg-green-600');
						setTimeout(() => {
							button.innerHTML = originalText;
							button.classList.remove('bg-green-600');
						}, 2000);
					}).catch(function() {
						alert('Texte copié dans le presse-papier !');
					});
				});

				// Copy tags functionality
				document.getElementById('copy-tags').addEventListener('click', function() {
					const tags = document.getElementById('instagram-tags').textContent.trim();
					navigator.clipboard.writeText(tags).then(function() {
						const button = document.getElementById('copy-tags');
						const originalText = button.innerHTML;
						button.innerHTML = '✅ Copié !';
						button.classList.add('bg-green-600');
						setTimeout(() => {
							button.innerHTML = originalText;
							button.classList.remove('bg-green-600');
						}, 2000);
					}).catch(function() {
						alert('Tags copiés dans le presse-papier !');
					});
				});
			});
		</script>
	</body>
